{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "./src/svg.d.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "src/**/*.test.js",
    "src/**/*.stories.tsx"
  ]
}
